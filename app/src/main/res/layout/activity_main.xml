<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="640dp"
    android:background="@drawable/backgroud"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="69dp"
        android:layout_marginRight="109dp"
        android:src="@drawable/circle" />

    <TextView
        android:id="@+id/grow_your_b"
        android:layout_width="189dp"
        android:layout_height="73dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="66dp"
        android:fontFamily="@font/roboto_bold"
        android:text="DRAW YOUR BUSINESS"
        android:textAlignment="center"
        android:textColor="#000000"

        android:textSize="28sp" />

    <TextView
        android:layout_width="302dp"
        android:layout_height="36dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
    android:textAlignment="center"
        android:fontFamily="@font/roboto_bold"
        android:text="We will help you to grow your business using online server"
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:background="#E3C000"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="LOGIN"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:layout_marginLeft="209dp"
        android:layout_marginTop="-50dp"
        android:background="#E3C000"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="SIGN UP"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:layout_width="302dp"
        android:layout_height="53dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/roboto_bold"
        android:text="HOW WE WORK?"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="18sp" />
</LinearLayout>